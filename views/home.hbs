<h1>Lärostigar</h1>
<div class="item-grid">
  {{#each learningPaths}}
    <article class="item">
      <div>
        <p><b>{{this.title}}</b></p>
        <p>Uppskattat Tid <i>{{this.estimatedHours}}</i></p>
        <p><i>{{this.description}}</i></p>

        {{#if ../user}}
          <form action="/profile/start-path/{{this._id}}" method="post">
            <button type="submit" class="btn">Starta</button>
          </form>
        {{else}}
          <p>
            <a href="/auth">Logga in</a> om du vill starta denna lärostig
          </p>
        {{/if}}
      </div>
    </article>
  {{/each}}
</div>
